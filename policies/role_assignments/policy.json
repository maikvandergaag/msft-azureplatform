{
  "properties": {
    "displayName": "Role Assignments trough Groups",
    "policyType": "Custom",
    "mode": "All",
    "metadata": {
      "category": "Role Assignments"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Authorization/roleAssignments"
          },
          {
            "not": {
              "field": "Microsoft.Authorization/roleAssignments/principalType",
              "equals": "Group"
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  },
